<h1>Listing Hadith Chapters</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hadith_chapters.each do |hadith_chapter| %>
      <tr>
        <td><%= link_to 'Show', hadith_chapter %></td>
        <td><%= link_to 'Edit', edit_hadith_chapter_path(hadith_chapter) %></td>
        <td><%= link_to 'Destroy', hadith_chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

