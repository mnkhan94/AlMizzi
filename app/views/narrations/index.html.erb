<p id="notice"><%= notice %></p>

<h1>Listing Narrations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @narrations.each do |narration| %>
      <tr>
        <td><%= link_to 'Show', narration %></td>
        <td><%= link_to 'Edit', edit_narration_path(narration) %></td>
        <td><%= link_to 'Destroy', narration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

