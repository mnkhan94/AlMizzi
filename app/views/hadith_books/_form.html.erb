<%= form_for(@hadith_book) do |f| %>
  <% if @hadith_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hadith_book.errors.count, "error") %> prohibited this hadith_book from being saved:</h2>

      <ul>
      <% @hadith_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, :class => "form-control" %>
  </div>

  <hr>

  <div>

    <div id="quiz_questions" style="padding: 15px;">
      <%= f.fields_for :hadith_chapters do |chapters| %>
        <%= render 'hadith_chapter_fields', f: chapters %>
      <% end %>

      <div class="links">
        <%= link_to_add_association 'add chapter', f, :hadith_chapters %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
