<div class="nested-fields">
  <%= f.label "Chapter Title" %>
  <%= f.text_field :title, :class => "original form-control" %>
  

  <%= f.label "Chapter Notes" %>
  <%= f.text_area :notes, :class => "original form-control" %>

  <%= f.check_box :_destroy %>

  <%= link_to_remove_association "remove chapter", f %>

  <br>
	
	<div id="narrations" style="padding: 15px;">
      <%= f.fields_for :narrations do |narration| %>
        <%= render 'narration_fields', f: narration %>
      <% end %>

      <div class="links">
        <%= link_to_add_association 'add narration', f, :narrations %>
      </div>
    </div>

  <hr>
</div>
